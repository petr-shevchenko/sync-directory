<Window x:Class="SyncDirectory.wAddFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cp="clr-namespace:SyncDirectory"
        xmlns:btnStyles="clr-namespace:ButtonStyle"
        Style="{StaticResource VS2012WindowStyle}"
        Icon="Style/Icon/Synchronize.ico"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Title="Добавить директорию для синхронизации" Height="700" Width="1000" FontSize="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Column="0" Grid.Row="0" Margin="10,0,10,0" LastChildFill="True">
            <TextBlock DockPanel.Dock="Top" Text="Выберите, откуда копируем:" Margin="0,5,0,5" Foreground="DarkOrange" FontWeight="DemiBold" />
            <TextBox DockPanel.Dock="Top" x:Name="TbSourceDir" Margin="0,5,0,5" />
            <cp:ucSelectFolder x:Name="TvSourceDir" Tag="2" Margin="0,5,0,5" />
        </DockPanel>
        
        <DockPanel Grid.Column="1" Grid.Row="0"  Margin="10,0,10,0" LastChildFill="True">
            <TextBlock DockPanel.Dock="Top" Text="И куда копируем:" Margin="0,5,0,5" Foreground="DarkOrange" FontWeight="DemiBold"/>
            <TextBox DockPanel.Dock="Top" x:Name="TbDestDir" Margin="0,5,0,5"/>
            <cp:ucSelectFolder x:Name="TvDestDir" Tag="2" Margin="0,5,0,5"/>
        </DockPanel>
        <DockPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,5,10,10" LastChildFill="False">
            <Button x:Name="BtnCancel" DockPanel.Dock="Left" Content="Отменить" Width="150" Click="btnCancel_Click"/>
            <Button x:Name="BtnAdd" DockPanel.Dock="Right" Content="Добавить папку" Width="150" Click="btnAdd_Click"/>
        </DockPanel>
    </Grid>
</Window>
